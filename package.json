{
    "name": "loc-counter-frontend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "pnpm build:css && pnpm build:js && pnpm build:app",
        "build:css": "tailwindcss -i ./src/frontend/input.css -o ./static/styles.css --minify",
        "build:js": "vite build",
        "build:app": "cp src/frontend/chart-app.js static/chart-app.js",
        "dev": "vite build --watch",
        "clean": "rm -rf static",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write ."
    },
    "dependencies": {
        "chart.js": "^4.4.1",
        "chartjs-adapter-luxon": "^1.3.1",
        "chartjs-plugin-annotation": "^3.1.0",
        "luxon": "^3.4.4"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@tailwindcss/cli": "^4.2.0",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.8.1",
        "tailwindcss": "^4.2.0",
        "vite": "^7.0.0"
    }
}
